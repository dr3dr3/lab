{
    "name": "DR3DR3-DOTFILES",

    "build": {
        "dockerfile": "Dockerfile"
    },

    "workspaceFolder": "/workspace",

    "postCreateCommand": "gum style --foreground 003 --border-foreground 003 --border rounded --align center --width 50 --margin '1 2' --padding '2 4' 'Andr√© Dreyer' 'Lab'",

    "customizations": {
        "vscode": {
            "extensions": [
                "github.vscode-pull-request-github",
                "github.copilot",
                "ms-azuretools.vscode-docker"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "fish", 
                "terminal.integrated.profiles.linux": {
                    "fish": {
                        "path": "/usr/bin/fish"
                    }
                }
            }
        }
    }
}